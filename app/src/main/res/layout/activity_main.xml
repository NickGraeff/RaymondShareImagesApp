<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <ImageView
        android:id="@+id/shared_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/share_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/share_image_button_text" />

    <Button
        android:id="@+id/get_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_image_button_text"
        android:layout_centerInParent="true"
        android:layout_below="@+id/share_image_button" />

    <EditText
        android:id="@+id/self_patient_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/self_patient_text"
        android:layout_centerInParent="true"
        android:layout_above="@+id/share_image_button" />

    <EditText
        android:id="@+id/search_patient_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/search_patient_text"
        android:layout_centerInParent="true"
        android:layout_below="@+id/get_image_button" />

</RelativeLayout>